import pygame
pygame.init()
window=pygame.display.set_mode((800,600))
pygame.display.set_caption('window')
black = (0,0,0)
loop = True
while loop:
    for event in pygame.event.get():
        if event.type==pygame.QUIT:
            loop = False
    window.fill(black)
  
    
    pygame.display.flip()

pygame.quit()
