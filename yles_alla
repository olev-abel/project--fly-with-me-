import pygame
pygame.init()

window=pygame.display.set_mode((600,200))
pygame.display.set_caption('window')

clock = pygame.time.Clock()

black = (0,0,0)
white = (255,255,255)

rocket = pygame.image.load("rocket.png").convert_alpha() # panin pildi ka eraldi

x, y = 100,100
moveX, moveY= 0,0

loop = True
while loop:
    
    for event in pygame.event.get():
        if event.type==pygame.QUIT:
            loop = False
        if event.type == pygame.MOUSEBUTTONDOWN:
            moveY = -10
        if event.type == pygame.MOUSEBUTTONUP:
            moveY = 10
            
    window.fill(white)
    window.blit(rocket, (x,y))

    y += moveY
  
    clock.tick(35) # muutes seda numbrit saab t√µsta ja langetada kiirust
    
    pygame.display.flip()

pygame.quit()

